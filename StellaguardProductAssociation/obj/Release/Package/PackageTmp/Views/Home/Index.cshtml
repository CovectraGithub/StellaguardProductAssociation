            if ('@Model.Message.IsGoodMessage.ToString().ToLower()' == 'false') {
            //debugger;
            var message = '@Model.Message.Message.Trim()';
            if (message != '') {
                $('#myModal').modal('show');
                $('#myModal button:nth-child(1)').focus();
            }
        }

            $('.closePopup').click(function () {
                if ('@Model.Message.IsGoodMessage' == 'True') {
                    var url = '@Url.Action("Index", "Home")';
                    window.location.href = url;
                }
                else {
                    $("#myModal").hide();
                }
            });
            return true;
        });

            function ValidateLogin() {

                //debugger;
                var Username = $('#Username').val();
                var Password = $('#Password').val();

                if (Username == null || Username == '') {
                    $('.customsummary').text('');
                    $('.customsummary').append("Username Required.");

                    $('#myModal').modal('show');

                    return true;
                }
                if (Password == null || Password == '') {
                    $('.customsummary').text('');
                    $('.customsummary').append("Password Required.");

                    $('#myModal').modal('show');

                    return true;
                }
            }



    </script>

}

